{
  "name": "neoterminal",
  "version": "0.1.0",
  "description": "A cyberpunk hacker simulation to master CLI",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "dev": "ts-node-dev --respawn src/index.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "prettier": "prettier --write \"**/*.{ts,tsx,js,jsx,json}\"",
    "narrative": "ts-node src/narrative-test.ts"
  },
  "keywords": [
    "terminal",
    "cli",
    "cyberpunk",
    "learning",
    "hacker"
  ],
  "author": "GHOST//SIGNAL COLLECTIVE",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.8",
    "chalk": "^4.1.2",
    "commander": "^9.0.0",
    "eventemitter3": "^4.0.7",
    "figlet": "^1.5.2",
    "figures": "^4.0.0",
    "inquirer": "^8.2.0",
    "redux": "^4.1.2",
    "redux-thunk": "^2.4.1",
    "xterm": "^4.18.0",
    "xterm-addon-fit": "^0.5.0",
    "xterm-addon-web-links": "^0.5.0"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.4",
    "@types/inquirer": "^8.2.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.45",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.0",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/*.test.ts"],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(axios)/)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "moduleNameMapper": {
      "@core/(.*)": "<rootDir>/src/core/$1",
      "@terminal/(.*)": "<rootDir>/src/terminal/$1",
      "@commands/(.*)": "<rootDir>/src/commands/$1",
      "@missions/(.*)": "<rootDir>/src/missions/$1",
      "@narrative/(.*)": "<rootDir>/src/narrative/$1",
      "@skills/(.*)": "<rootDir>/src/skills/$1",
      "@utils/(.*)": "<rootDir>/src/utils/$1",
      "@filesystem/(.*)": "<rootDir>/src/filesystem/$1",
      "@types/(.*)": "<rootDir>/types/$1"
    }
  }
}
